@model System.Collections.Generic.ICollection<SD_125_BugTracker.Models.Ticket>

@{
    ViewBag.Title = "Tickets";
    Layout = "_Layout";
}

<h2>Tickets</h2>

@if (Model.Any()) {
    <table class="table">
        <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Project
            </th>
            <th>
                Ticket Priority
            </th>
            <th>
                Ticket Type
            </th>
            <th>
                Ticket Status
            </th>
            <th>
                Owner User
            </th>
            <th>
                Assigned User
            </th>
            <th></th>
        </tr>
        </thead>
        @foreach (var ticket in @Model) {
            <tr class="column">
                <td>@ticket.Title</td>
                <td>@ticket.Project?.Name</td>
                <td>@ticket.TicketPriority?.Name</td>
                <td>@ticket.TicketType?.Name</td>
                <td>@ticket.TicketStatus?.Status</td>
                <td>@ticket.OwnerUser?.UserName</td>
                <td>@ticket.AssignedToUser?.UserName</td>
                <td>
                    <a asp-action="AssignUserToTicket" asp-controller="Tickets" asp-route-id="@ticket.Id">Assign</a> |
                    <a asp-action="Details" asp-controller="Tickets" asp-route-id="@ticket.Id">Details</a> |
                    <a asp-action="Edit" asp-controller="Tickets" asp-route-id="@ticket.Id">Edit</a> |
                    <a asp-action="History" asp-controller="Tickets" asp-route-ticketid="@ticket.Id">History</a> |
                    <a asp-action="Index" asp-controller="TicketComments" asp-route-ticketid="@ticket.Id">Comment</a>
                    
                </td>
            </tr>
        }
    </table>
}
else {
    <p>There are no tickets.</p>
}

<a asp-controller="Submitter" asp-action="Index">Back to dashboard</a> 