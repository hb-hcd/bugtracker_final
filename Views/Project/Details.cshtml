@model Project

@{
    ViewBag.Title = "Details";
    Layout = "_Layout";
}

<h2>Details</h2>

<dl class="row">
    <dt class = "col-sm-2">
       Project Name: 
    </dt>
    <dd class = "col-sm-10">
       @Model.Name
    </dd>
    <dt class = "col-sm-2">
        Archived
    </dt>
    
        @if ( Model.IsArchived )
        {
           <dd class = "col-sm-10">Yes</dd>
        }
        else
        {
            <dd class = "col-sm-10">No</dd>
        }
  
    
</dl>

<a asp-controller="Submitter" asp-action="Index">Back to dashboard</a> |
<a asp-controller="Tickets" asp-action="Index">Back to tickets list</a> 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}